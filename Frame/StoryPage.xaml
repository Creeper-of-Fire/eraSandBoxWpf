<Page x:Class="eraSandBoxWpf.Frame.StoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:eraSandBoxWpf.Frame"
      mc:Ignorable="d"
      Title="DescriptionPage" d:DesignHeight="450" d:DesignWidth="800">
    <TextBlock Name="StoryTextBlock">
        <Run>这里是描述页面。</Run>
        <!-- 添加普通文本 -->
        <Run>这是一段普通文本。</Run>

        <!-- 添加加粗文本 -->
        <Bold>
            <Run>这是加粗的文本。</Run>
        </Bold>

        <!-- 添加斜体文本 -->
        <Italic>
            <Run>这是斜体的文本。</Run>
        </Italic>

        <!-- 添加下划线文本 -->
        <Underline>
            <Run>这是带下划线的文本。</Run>
        </Underline>

        <Hyperlink Click="Hyperlink_Click" ToolTip="点击这里！">
            这是可点击的文本。
        </Hyperlink>
    </TextBlock>
</Page>